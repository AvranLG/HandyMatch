<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/fondogris"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTituloCompletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Completa tu perfil!"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/fondosyletras"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvMensajeCompletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Necesitas tener tu perfil completo para poder hacer HandyMatch con alguien."
        android:textSize="15sp"
        android:textColor="@color/letrasnormales"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnIrACompletarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir a mi perfil"
        android:backgroundTint="@color/fondosyletras"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnCancelarCompletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="#B0BEC5"
        android:textColor="@android:color/black" />
</LinearLayout>
