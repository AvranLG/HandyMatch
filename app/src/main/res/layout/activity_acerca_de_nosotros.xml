<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- AppBar con Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondosyletras">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/btn_clear"
            app:titleTextColor="@color/colorSeleccionado">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acerca de nosotros"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Logo de la app -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:contentDescription="Logo de HandyMatch"
                android:src="@drawable/logo" />

            <!-- Título de la app -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="HandyMatch"
                android:textColor="@color/fondosyletras"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Contenido en tarjetas para mejor visualización -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuestra Misión"
                        android:textColor="@color/fondosyletras"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HandyMatch nace de una idea simple pero poderosa: facilitar la conexión entre personas que necesitan realizar pequeños trabajos y aquellas que buscan generar ingresos ofreciendo sus habilidades. En un mundo cada vez más acelerado, entendemos que no siempre hay tiempo para encargarse de tareas cotidianas, ni siempre es fácil encontrar ayuda confiable. Por eso, creamos una plataforma pensada para resolver ambas necesidades de forma práctica, segura y cercana."
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuestro Objetivo"
                        android:textColor="@color/fondosyletras"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuestro objetivo es claro: construir una comunidad colaborativa donde usuarios puedan publicar anuncios de servicios, encontrar trabajos en su área, calificar experiencias y generar relaciones de confianza. HandyMatch no solo es una app; es un puente entre personas, una herramienta para quienes quieren aprovechar su tiempo y talentos para apoyar a otros y crecer económicamente."
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuestra Visión"
                        android:textColor="@color/fondosyletras"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HandyMatch promueve el valor de la economía colaborativa, la inclusión laboral y el empoderamiento de personas que desean aprovechar sus capacidades en un entorno flexible. Nuestra visión es expandir este modelo a distintas regiones, apoyando tanto a comunidades urbanas como rurales, y ofreciendo nuevas oportunidades donde antes no las había."
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuestro Compromiso"
                        android:textColor="@color/fondosyletras"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estamos comprometidos con la mejora constante, escuchando a nuestra comunidad y adaptando la app a sus necesidades reales. Creemos en la transparencia, la confianza y la colaboración como pilares de todo lo que hacemos.\n\nGracias por formar parte de HandyMatch. Esto no es solo una plataforma digital: es un espacio de oportunidades, soluciones y crecimiento compartido."
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Firma -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="— El equipo de HandyMatch"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="#444444"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>