<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- Para mensajes a la izquierda (azul) -->
    <LinearLayout
        android:id="@+id/left_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/left_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_left_mensaje"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="35dp"/>
    </LinearLayout>

    <!-- Para mensajes a la derecha (gris) -->
    <LinearLayout
        android:id="@+id/right_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/right_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_right_mensaje"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginStart="35dp"/>
    </LinearLayout>
</LinearLayout>
