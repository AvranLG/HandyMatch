<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color del texto cuando el chip está seleccionado -->
    <item android:state_checked="true" android:color="@color/colorNormal" />
    <!-- Color del texto cuando el chip no está seleccionado -->
    <!-- En este caso ponemos color seleccionado porque es el color invertido al fondo -->
    <item android:color="@color/colorSeleccionado" />
</selector>